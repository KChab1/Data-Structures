#include<bits/stdc++.h>
using namespace std;
//a: creating a 5x5 identity matrix
int Identity(int num){
    int row, col;
    for(row = 0; row < num; row++){
        for(col = 0; col < num; col++){
            if(row == col)
                cout << 1 << "";
            else
                cout << 0 << "";
            // when row = col, a 1 appears, so 1 at 0x0, 1x1, 2x2, etc. hence, identity matrix. 
        }
        cout << endl;
    }
    return 0;
}
//b: determines size of identity matrix and prints out values of matrix. 
int main(){
    int size = 5;
    Identity(size);
    return 0;
